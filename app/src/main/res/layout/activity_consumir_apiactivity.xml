            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="10dp" />

        <ImageView
            android:id="@+id/imagePhoto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <Button
